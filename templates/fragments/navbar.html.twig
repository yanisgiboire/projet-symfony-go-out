
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .navbar {
    background-color: #13293d; /* Couleur de fond */
    color: #ffffff; /* Couleur du texte */
}

/* Augmenter la largeur de la barre de navigation */
.container-fluid {
    width: 95%; /* 2 fois plus large que la largeur par défaut */
}

/* Ajouter un logo à gauche de la marque de navigation */
.navbar-brand {
    padding: 0; /* Pour supprimer le remplissage autour du logo */
}

.navbar-brand img {
    height: 40px; /* Ajuster la hauteur du logo */
    margin-right: 10px; /* Espacement entre le logo et le texte de la marque */
}

/* Ajouter un slogan texte sous le logo */
.slogan {
    color: #ffffff; /* Couleur du texte */
    font-size: 16px; /* Taille de police */
}

/* Aligner tous les éléments du menu à droite */
.navbar-nav {
    margin-left: auto;
}
</style>

<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">HOME</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">My profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled">Log out</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
{% endblock %}
