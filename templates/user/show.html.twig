{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h2>Votre compte utilisateur</h2>
    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit compte utilisateur</a>
        </tbody>
    </table>
    <h2>Votre profile participant</h2>
    <table class="table">
        <tbody>
        <tr>
            <th>Username</th>
            <td>{{ user.participant.surname }}</td>
            <td>{{ user.participant.firstname }}</td>
            <td>{{ user.participant.phoneNumber }}</td>
            <td>{{ user.participant.email }}</td>
        </tr>
        </tbody>
        <a href="{{ path('app_participant_edit', {'id': user.participant.id}) }}">edit profile participant</a>
    </table>

