{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="goCard mx-auto text-white">
                <h2 class="text-white text-center">Mon compte :</h2>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="edit-link position-absolute top-0 end-0 m-4 btn btn-primary">
                    <i class="fa-solid fa-pen"></i>
                </a>
                <div class="mb-3">
                    <div class="mb-3">
                        <strong>Nom d'utilisateur : </strong> {{ user.username }}
                    </div>
                    <div class="mb-3">
                        <strong>Surnom : </strong> {{ user.participant.surname }}
                    </div>
                    <div class="mb-3">
                        <strong>Nom :</strong> {{ user.participant.firstname }}
                    </div>
                    <div class="mb-3">
                        <strong>Numéro de téléphone : </strong> {{ user.participant.phoneNumber }}
                    </div>
                    <div class="mb-3">
                        <strong>Email : </strong> {{ user.participant.email }}
                    </div>
                    {% if user.participant.imageProfileName != null %}
                        <div class="mb-3">
                            <img src="{{ asset('uploads/profile_image/' ~ user.participant.imageProfileName ) }}" alt="Image profile">
                        </div>
                    {% endif %}
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
