{% extends 'base.html.twig' %}

{% block title %}Event infos
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 card custom-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title text-center my-3">{{ go_out.name }} </h4>
                    {% if go_out.participant.id == app.user.participant.id %}
                        <p class="card-text">
                        <strong>Vous êtes organisateur</strong>
                    {% else %}
                        <p class="card-text">
                            <strong>Organisateur : </strong>
                            <a href="{{ path('app_go_out_show_participant', {'id': go_out.participant.id }) }}">
                                {{ go_out.participant.surname }}</a>
                        </p>
                    {% endif %}
                    <div class="d-flex align-items-center">
                    {% if go_out.participant.id == app.user.participant.id %}
                        <div class="m-2">
                            <a href="{{ path('app_go_out_edit', {'id': go_out.id}) }}" class="btn btn-primary w-100 my-1">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                        </div>
                        {% if go_out.status.libelle == "Annulée" %}
                            <p class="px-1">Sortie annulée</p>
                        {% else %}
                        <div class="m-2">
                            <a href="{{ path('app_go_out_cancel', {'id': go_out.id}) }}" class="btn btn-danger w-100 my-1">
                                <i class="fa-solid fa-ban"></i>
                            </a>
                        </div>
                        {% endif %}
                    {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Date de début : </strong>
                        {{ go_out.startDateTime ? go_out.startDateTime|date('Y-m-d H:i:s') : '' }}</p>
                    <p class="card-text">
                        <strong>Durée : </strong>
                        {{ go_out.duration ? go_out.duration|date('H:i:s') : '' }}</p>
                    <p class="card-text">
                        <strong>Limite de date d'inscription : </strong>
                        {{ go_out.limitDateInscription ? go_out.limitDateInscription|date('Y-m-d') : '' }}</p>
                    <p class="card-text">
                        <strong>Nombre max de participant(s) : </strong>
                        {{ go_out.maxNbInscriptions }}</p>
                    <p class="card-text">
                        <strong>Description : </strong>
                        {{ go_out.description }}</p>

                    <h2>Participants</h2>
                   <ul>
                    {% set hasCurrentUser = false %}
                       <p class="card-text">
                           <strong>Nombre de participant(s) : </strong>
                           {{ go_out_participants|length }}
                       </p>
                    {% for participant in go_out_participants %}
                        <a href="{{ path('app_go_out_show_participant', {'id': participant.participant.id }) }}">
                            <li>{{ participant.participant.surname }}</li>
                        </a>
                        {% if app.user and participant.participant.surname == app.user.participant.surname %}
                            {% set hasCurrentUser = true %}
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="card-footer my-2">
                {% if hasCurrentUser %}
                    <a href="{{ path('app_participant_go_out_delete', {'id': go_out.id}) }}" class="btn btn-danger w-100 my-1">Remove from List</a>
                {% else %}
                    {% if go_out.participant.id != app.user.participant.id %}
                        {% if go_out.status.libelle != "Activité en cours" and go_out.status.libelle != "Annulée" %}
                            <a href="{{ path('app_participant_go_out_new', {'id': go_out.id}) }}" class="btn btn-primary w-100 my-1">Register</a>
                        {% endif %}
                    {% endif %}
                {% endif %}
                <a href="{{ path('app_go_out_index') }}" class="btn btn-secondary w-100 my-1">Back to list</a>
            </div>
            </div>
        </div>
    </div>
{% endblock %}

