{% extends 'base.html.twig' %}

{% block title %}GoOut{% endblock %}

{% block body %}
    <h1>GoOut</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ go_out.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ go_out.name }}</td>
            </tr>
            <tr>
                <th>StartDateTime</th>
                <td>{{ go_out.startDateTime ? go_out.startDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ go_out.duration ? go_out.duration|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LimitDateInscription</th>
                <td>{{ go_out.limitDateInscription ? go_out.limitDateInscription|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MaxNbInscriptions</th>
                <td>{{ go_out.maxNbInscriptions }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ go_out.description }}</td>
            </tr>
        </tbody>
    </table>

    {# je veux voir la liste de mes participant #}
    
    <h2>Participants</h2>
    <ul>
        {% for participants in go_out_participants %}
            <li>{{ participants.participant.surname }}</li>
        {% endfor %}
    </ul>

    {# je veux afficher la liste de mes partiicipant dans ma console  #}

    <a href="{{ path('app_go_out_index') }}">back to list</a>

    <a href="{{ path('app_go_out_edit', {'id': go_out.id}) }}">edit</a>

    {{ include('go_out/_delete_form.html.twig') }}
{% endblock %}
